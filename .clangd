# Clangd configuration for Anagram Chain Finder
# Language server settings for IDE integration

CompileFlags:
  Add:
    - -std=c11
    - -Wall
    - -Wextra
    - -Isrc
  Remove:
    - -W*

Diagnostics:
  ClangTidy:
    Add:
      - bugprone-*
      - performance-*
      - readability-identifier-naming
      - misc-unused-parameters
    Remove:
      - bugprone-easily-swappable-parameters
      - readability-magic-numbers

  UnusedIncludes: Strict

InlayHints:
  Enabled: true
  ParameterNames: true
  DeducedTypes: true

Hover:
  ShowAKA: true
