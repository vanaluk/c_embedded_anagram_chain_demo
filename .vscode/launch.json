{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Anagram Chain",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/anagram_chain_debug",
            "args": [
                "${workspaceFolder}/tests/data/example.txt",
                "abck"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Debug",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Debug Current Test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/test_anagram",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Tests",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
