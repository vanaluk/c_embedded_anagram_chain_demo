        // =====================================================================
        // ARM Bare-metal Debug (QEMU GDB)
        // =====================================================================
        {
            "name": "Debug ARM Bare-metal - Human Static (QEMU)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/anagram_chain_baremetal.elf",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb-multiarch",
            "miDebuggerServerAddress": "localhost:1234",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set remote target",
                    "text": "set remotetimeout 10",
                    "ignoreFailures": true
                }
            ],
            "postRemoteConnectCommands": [
                {
                    "description": "Set breakpoint at main",
                    "text": "-break-insert main",
                    "ignoreFailures": false
                },
                {
                    "description": "Continue to main",
                    "text": "-exec-continue",
                    "ignoreFailures": false
                }
            ],
            "preLaunchTask": "QEMU Debug Bare-metal - Human Static",
            "serverLaunchTimeout": 10000,
            "filterStdout": true,
            "filterStderr": true
        },

