        // AI Implementation - PC Debug
        // =====================================================================
        {
            "name": "Debug AI - PC",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/anagram_chain_debug",
            "args": [
                "${workspaceFolder}/tests/data/example.txt",
                "abck"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build AI - PC Debug",
            "miDebuggerPath": "/usr/bin/gdb"
        },

